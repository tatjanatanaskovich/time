<% if @workplace.errors.any? %>
<h2>The following errors prevented a workplace from getting created</h2>
<ul>
<% @workplace.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<h1>Create a workplace</h1>
<%= form_for @workplace do |f| %>
<p>
<%= f.label :name %><br/>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :description %><br/>
<%= f.text_field :description %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>
<%= link_to "Back to workplaces listing", workplaces_path %>