<% if @employee.errors.any? %>
<h2>The following errors prevented an employee from getting created</h2>
<ul>
<% @employee.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<h1>Create an employee</h1>
<%= form_for @employee do |f| %>
<p>
<%= f.label :name %><br/>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :username %><br/>
<%= f.text_field :username %>
</p>
<p>
<%= f.label :id_card %><br/>
<%= f.text_field :id_card %>
</p>
<p>
<%= f.label :email %><br/>
<%= f.text_field :email %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>
<%= link_to "Back to employees listing", employees_path %>